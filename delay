<div class="demoarea" id="delay">start delay</div>
<script src="http://code.jquery.com/jquery-latest.js"></script>
<script type="text/javascript">
	var JQFUNS = {
		"delay": {
			"run": function(id){
				$('#' + id ).hide()
				.fadeIn('slow')
				.delay(500)
				.fadeOut('slow');
			},
			"reset": function(id){
				{}
			}
		}
	}
	JQFUNS.delay.run('delay')
</script>
</body>
